[run]
# Enable branch coverage for more detailed analysis
branch = True

# Source directory to measure coverage
source = src

# Include all Python files in src
include =
    src/trading_rl_agent/*.py
    src/trading_rl_agent/*/*.py
    src/trading_rl_agent/*/*/*.py

# Exclude test files and generated files
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */migrations/*
    */venv/*
    */.venv/*
    */build/*
    */dist/*
    */site-packages/*
    */node_modules/*
    */coverage/*
    */htmlcov/*
    */.pytest_cache/*
    */ray_results/*
    */optimization_results/*
    */experiments/*
    */runs/*
    */wandb/*
    */mlruns/*
    */logs/*
    */temp/*
    */tmp/*
    */cache/*
    */__init__.py

# Data file for coverage
data_file = .coverage

# Parallel execution support
parallel = True

# Relative paths for better portability
relative_files = True

[report]
# Include all source files
include =
    src/trading_rl_agent/*.py
    src/trading_rl_agent/*/*.py
    src/trading_rl_agent/*/*/*.py

# Exclude the same files as in run section
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */migrations/*
    */venv/*
    */.venv/*
    */build/*
    */dist/*
    */site-packages/*
    */node_modules/*
    */coverage/*
    */htmlcov/*
    */.pytest_cache/*
    */ray_results/*
    */optimization_results/*
    */experiments/*
    */runs/*
    */wandb/*
    */mlruns/*
    */logs/*
    */temp/*
    */tmp/*
    */cache/*
    */__init__.py

# Precision for percentage display
precision = 2

[html]
# Directory for HTML reports
directory = htmlcov

# Extra CSS for better styling
# extra_css = custom.css

# Title for HTML reports
title = Trading RL Agent Coverage Report

[xml]
# Output file for XML reports
output = coverage.xml

[json]
# Output file for JSON reports
output = coverage.json

[lcov]
# Output file for LCOV reports
output = coverage.lcov
