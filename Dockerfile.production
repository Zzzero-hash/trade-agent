# Production-ready Dockerfile for Trading RL Platform
FROM python:3.11-slim as base

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    libffi-dev \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd --create-home --shell /bin/bash trader
WORKDIR /app
RUN chown trader:trader /app

# Install Python dependencies
COPY pyproject.toml ./
RUN pip install --upgrade pip setuptools wheel && \
    pip install -e .

# Copy application code
COPY --chown=trader:trader . .

# Switch to non-root user
USER trader

# Production entrypoint
ENTRYPOINT ["trading-cli"]

# Multi-stage build for different deployment scenarios
FROM base as development
# Development dependencies
RUN pip install pytest pytest-cov black ruff mypy jupyter

FROM base as training
# GPU support for training
RUN pip install torch torchvision --index-url https://download.pytorch.org/whl/cu118

FROM base as production
# Minimal production image
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD trading-cli status || exit 1

EXPOSE 8080
CMD ["status"]
