# Trading RL Platform Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://trader:your_secure_password_here@localhost:5432/trading_rl

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Broker API Keys
# Alpaca (https://alpaca.markets/)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use https://api.alpaca.markets for live trading

# Interactive Brokers
IB_HOST=localhost
IB_PORT=7497
IB_CLIENT_ID=1

# Market Data Providers
# Alpha Vantage (https://www.alphavantage.co/)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Polygon.io (https://polygon.io/)
POLYGON_API_KEY=your_polygon_api_key

# News & Sentiment Data
NEWS_API_KEY=your_news_api_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Trading Configuration
PAPER_TRADING=true  # Set to false for live trading (CAUTION!)
INITIAL_CAPITAL=100000
MAX_POSITION_SIZE=0.1  # 10% max position size
STOP_LOSS=0.05  # 5% stop loss
MAX_DAILY_LOSS=0.02  # 2% max daily loss

# Risk Management
RISK_PROFILE=conservative  # conservative, moderate, aggressive
ENABLE_CIRCUIT_BREAKERS=true
MAX_DRAWDOWN=0.15  # 15% max drawdown

# Monitoring & Alerts
# Slack Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email SMTP Configuration
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_RECIPIENTS=trading-alerts@yourcompany.com,risk-team@yourcompany.com

# Ray Cluster (for distributed training)
RAY_ADDRESS=auto  # or specific address like ray://localhost:10001
RAY_DASHBOARD_PORT=8265

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/app/logs/trading.log
LOG_FORMAT=json  # json or text

# Performance Monitoring
ENABLE_METRICS_COLLECTION=true
METRICS_RETENTION_DAYS=90
PERFORMANCE_REPORT_FREQUENCY=daily  # hourly, daily, weekly

# Security
SECRET_KEY=your-secret-key-for-jwt-tokens
JWT_EXPIRATION_HOURS=24
ENABLE_API_RATE_LIMITING=true
MAX_API_REQUESTS_PER_MINUTE=100

# Model Management
MODEL_REGISTRY_PATH=/app/models
MODEL_BACKUP_ENABLED=true
MODEL_BACKUP_FREQUENCY=daily
MODEL_VERSIONING_ENABLED=true

# Data Management
DATA_RETENTION_DAYS=365
ENABLE_DATA_COMPRESSION=true
DATA_BACKUP_ENABLED=true
DATA_BACKUP_FREQUENCY=weekly

# Feature Engineering
ENABLE_FEATURE_CACHING=true
FEATURE_CACHE_TTL_HOURS=1
FEATURE_RECALC_FREQUENCY=5min

# GPU Configuration (for training)
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Development/Debug Settings
DEBUG=false
ENABLE_PROFILING=false
MOCK_BROKER_ENABLED=false  # Use mock broker for testing
SIMULATION_MODE=false  # Run in simulation without real API calls

# Deployment Environment
ENVIRONMENT=production  # development, staging, production
SERVICE_NAME=trading-rl-platform
SERVICE_VERSION=1.0.0

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=10

# Load Balancing & Scaling
ENABLE_AUTO_SCALING=true
MIN_REPLICAS=1
MAX_REPLICAS=5
TARGET_CPU_UTILIZATION=70

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

# Compliance & Audit
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_PATH=/app/logs/audit.log
COMPLIANCE_CHECKS_ENABLED=true

# Time Zone
TZ=America/New_York

# External Dependencies
YAHOO_FINANCE_RATE_LIMIT=2000  # requests per hour
ALPHA_VANTAGE_RATE_LIMIT=5  # requests per minute
POLYGON_RATE_LIMIT=100  # requests per minute
